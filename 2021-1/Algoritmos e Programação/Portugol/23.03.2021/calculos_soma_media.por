programa
{
	funcao inicio()
	{
		real num1, num2, soma, media

		escreva("Digite um número: \n")
		leia (num1)
		escreva("Digite outro número: \n")
		leia (num2)

		soma = num1+num2
		media = num1+num2/2

		escreva("A soma de ", num1, " e ", num2, " é ", soma, ".\n")
		escreva("A média aritmética de ", num1, " e ", num2, " é ", media, ".\n")
	}
}
